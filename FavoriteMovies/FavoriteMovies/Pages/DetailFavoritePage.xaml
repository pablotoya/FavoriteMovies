<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FavoriteMovies.Pages.DetailFavoritePage"
             xmlns:vm="clr-namespace:FavoriteMovies.ViewModels"
             Title="DetailFavoritePage">
    <ContentPage.BindingContext>
        <vm:DetailFavoriteViewModel/>
    </ContentPage.BindingContext>
     <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Guardar"
            Command="{Binding SaveCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    Glyph="&#xE80F;"
                    FontFamily="Iconfont"
                    Color="Black"
                    Size="30"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label 
            Text="{Binding Favorite.Title}"
            VerticalOptions="Center"
            Style="{StaticResource LabelCustom}"/>
    </VerticalStackLayout>
</ContentPage>